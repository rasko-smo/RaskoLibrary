<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/commonFooter"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:padding="1dp"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="@+id/mainFooterGuideLine">

    <Button
        android:id="@+id/footerButton1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/common_green_button"
        app:backgroundTint="@null"
        android:text="1"/>

    <Button
        android:id="@+id/footerButton2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/common_green_button"
        app:backgroundTint="@null"
        android:text="2"/>

    <Button
        android:id="@+id/footerButton3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/common_green_button"
        app:backgroundTint="@null"
        android:text="3"/>

    <Button
        android:id="@+id/footerButton4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/common_green_button"
        app:backgroundTint="@null"
        android:text="4"/>

    <Button
        android:id="@+id/footerButton5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/common_green_button"
        app:backgroundTint="@null"
        android:text="5"/>

    <Button
        android:id="@+id/footerButton6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/common_green_button"
        app:backgroundTint="@null"
        android:text="6"/>

</LinearLayout>